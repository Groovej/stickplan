#name_of_board
  %h2  
    = @my_board.name_of_board
    
#main_container
  #to_do
    %h3  todo
    .block_to_do
      .sticker 
        +
        %a{:href=>"#", :title => "Delete this sticker", :class => "icon_delete"}
          =image_tag("delete-icon.png", :alt => "Delete sticker")
                
      %div{:class => "sticker yellow"} 
        Learn Lisp programming language
        = render "link_to_delete"
      %div{:class => "sticker green"} 
        Learn Ruby programming language
        = render "link_to_delete"
      %div{:class => "sticker blue"} 
        Go to GYM
        = render "link_to_delete"

  #in_progress
    %h3  in progress
    .block_in_progress
      %div{:class => "sticker purple"} 
        Just Fish sticker
        = render "link_to_delete"
